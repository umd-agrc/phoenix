<launch>
<!-- Argument Definition -->
  <arg
    name="cam1"
    value="0"
  />
  <arg
    name="cam2"
    value="1"
  />

<!-- Node Initialization -->
  <node
    pkg="rotocrawler"
    type="image_publisher.py"
    name="picamera"
    args="$(arg cam1)">
    <remap from="camera/image" to="left/image_raw" />
  </node>
  <node
    pkg="rotocrawler"
    type="image_publisher.py"
    name="usb_camera"
    args="$(arg cam2)">
    <remap from="camera/image" to="right/image_raw" />
  </node>
  <node
    pkg="rotocrawler"
    type="image_subscriber.py"
    name="stereo_image_proc">
    <remap from="camera/image" to="left/image_raw" />
    <remap from="camera/image" to="right/image_raw" />
  </node>
</launch>
