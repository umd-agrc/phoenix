<launch>
<!-- Argument Definition -->
  <arg
    name="cam1"
    value="0"
  />
  <arg
    name="cam2"
    value="1"
  />

<!-- Node Initialization -->
  <node
    pkg="cv_camera"
    type="cv_camera_node"
    name="picamera">
    <param name="device_id" value ="$(arg cam1)"/>
    <remap from="picamera/image_raw" to="stereo/left/image_raw"/>
    <remap from="picamera/camera_info" to="stereo/left/camera_info"/>
  </node>
  <node
    pkg="cv_camera"
    type="cv_camera_node"
    name="usbcam">
    <param name="device_id" value="$(arg cam2)"/>
    <remap from="usbcam/image_raw" to="stereo/right/image_raw"/>
    <remap from="usbcam/image_raw" to="stereo/right/image_raw"/>
  </node>
  <node
    pkg="stereo_image_proc"
    type="stereo_image_proc"
    name="stereo_image_proc">
  </node>
</launch>
